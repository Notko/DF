:root {
    font-size: 16px;
    font-family: 'Open Sans', sans-serif;
}

html, body {
    margin: 0;
    min-height: 100vh;
}

.posts {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2em;
    margin-top: 4em;
}

.post {
    max-width: 600px;
}

.post__heading {
    margin: 0 0 .2em 0;
}

.post__footer {
    margin-top: .6em;
    display: flex;
    justify-content: space-between;
    font-style: italic;
}